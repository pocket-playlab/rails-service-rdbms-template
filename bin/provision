#!/bin/bash --login
# Sets up a development environment inside a vagrant vm

set -e

# cd straight to /vagrant on login
if ! grep -q 'cd \/vagrant' ~/.bashrc; then
  echo 'cd /vagrant' >> ~/.bashrc
fi
cd /vagrant

# Install packages
sudo apt-add-repository --yes ppa:brightbox/ruby-ng
sudo apt-get update --quiet
sudo -E apt-get install --quiet --assume-yes \
  git postgresql libpq-dev libsqlite3-dev redis-server ruby2.2 ruby2.2-dev

# Install ruby dependencies
sudo gem install bundler
bundle install

# Allow postgres login from localhost without password
sudo tee /etc/postgresql/9.3/main/pg_hba.conf << 'EOF'
local   all             all                                     trust
host    all             all             127.0.0.1/32            trust
host    all             all             ::1/128                 trust
EOF
sudo service postgresql restart

# Create database
psql -U postgres -c \
  "CREATE DATABASE development WITH ENCODING 'UTF8' TEMPLATE template0;" ||
  echo 'development database already created'

# Create database user
psql -U postgres -c "CREATE USER vagrant;" ||
  echo 'database user already created'

# Load schema
rake db:schema:load

# Run the tests
rspec --format documentation
